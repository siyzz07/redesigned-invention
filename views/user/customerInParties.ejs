    <script>
        const form = document.getElementById('categoryForm');
        const category = document.getElementById('category');
        const description = document.getElementById('description');
        const setLimit = document.getElementById('setlimit');
    
        const categoryError = document.getElementById('categoryError');
        const descriptionError = document.getElementById('descriptionError');
        const limitError = document.getElementById('limitError');
    
        // Helper function to check if a field has only spaces or special characters
        function isValidText(value) {
            return value.trim() !== '' && /^[A-Za-z0-9\s]+$/.test(value);
        }
    
        // Form submit event listener
        form.addEventListener('submit', function(event) {
            let isValid = true;
    
            // Reset error messages
            categoryError.textContent = '';
            descriptionError.textContent = '';
            limitError.textContent = '';
    
            // Validate Category Name
            if (!isValidText(category.value)) {
                categoryError.textContent = 'Please enter a valid category name .';
                isValid = false;
            }
    
            // Validate Description
            if (!isValidText(description.value)) {
                descriptionError.textContent = 'Please enter a valid description .';
                isValid = false;
            }
    
            // Validate Set Limit (only numeric values allowed)
            if (!/^\d+$/.test(setLimit.value.trim())) {
                limitError.textContent = 'Please enter a limit (numeric values only).';
                isValid = false;
            }
    
            if (!isValid) {
                event.preventDefault();
            }
        });
    </script>
    
