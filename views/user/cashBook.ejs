      const amountInput = document.getElementById('swal-input-amount');
      const swalTitle = document.getElementById('swal-title');
      const errorMessage = document.getElementById('error-message'); 

      // Update title whenever the user types or deletes the amount
      amountInput.addEventListener('input', function () {
          const amountValue = amountInput.value.trim();

          // Check if the amount exceeds 6 digits
